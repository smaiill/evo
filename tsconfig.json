{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noEmitOnError": true,
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "lib": ["ESNext", "DOM"],
    "types": ["@citizenfx/server", "@types/node", "@citizenfx/client"],
    "outDir": "dist",
    "baseUrl": "src",
    "moduleResolution": "node",
    "noEmit": true
  },
  "include": ["src", "example"],
  "exclude": ["node_modules"]
}
